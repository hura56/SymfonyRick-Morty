{% extends 'base.html.twig' %}

{% block title %}Lista postaci{% endblock %}

{% block body %}
<h1>Postacie z Rick and Morty</h1>

<div style="display: flex; flex-wrap: wrap; gap: 20px;">
    {% for character in characters %}
        <div class="characterCard">
            <img src="{{ character.image }}" alt="{{ character.name }}" width="150"/>
            <h3>{{ character.name }}</h3>
        </div>
    {% endfor %}
</div>
<div style="margin-top: 20px;">
    <nav>
        <ul style="list-style: none; display: flex; gap: 10px; padding: 0;">
            {% if currentPage > 1 %}
                <li><a href="{{ path('character_list', { page: currentPage - 1 }) }}">← Poprzednia</a></li>
            {% endif %}

            {% for i in 1..totalPages %}
                <li>
                    {% if i == currentPage %}
                        <strong>{{ i }}</strong>
                    {% else %}
                        <a href="{{ path('character_list', { page: i }) }}">{{ i }}</a>
                    {% endif %}
                </li>
            {% endfor %}

            {% if currentPage < totalPages %}
                <li><a href="{{ path('character_list', { page: currentPage + 1 }) }}">Następna →</a></li>
            {% endif %}
        </ul>
    </nav>
</div>
{% endblock %}
